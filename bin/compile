#!/bin/bash
build=$1
cache=$2
env=$3

export_env_dir() {
  env_dir=$1
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

export_env_dir "$env"

echo "-----> Restoring Assets from Cache (if any)"
cp -r $cache/assets $build/public
cp -r $cache/packs $build/public
cp -r $cache/packs-test $build/public

echo "-----> Precompiling assets..."

cd $build
bundle exec rake assets:precompile | sed 's/^/       /'

echo "-----> Assets precompiled!"
echo "-----> Saving Assets to Cache"
cp -r $build/public/assets $cache
cp -r $build/public/packs $cache
cp -r $build/public/packs-test $cache

echo "-----> Deleting app/assets to reduce slug size"
rm -rf app/assets/ app/javascript
